@page
@model Cuidemoslos.Web.Pages.Logs.IndexModel
@{
    ViewData["Title"] = "Bitácora";
}
<section class="container">
    <h2>Bitácora</h2>
    <table class="table">
        <thead><tr><th>Fecha</th><th>Nivel</th><th>Acción</th><th>Datos</th></tr></thead>
        <tbody>
            @foreach (var a in Model.Items)
            {
                <tr>
                    <td>@a.CreatedAt.ToString("g")</td>
                    <td>@a.Level</td>
                    <td>@a.Action</td>
                    <td class="truncate">@a.Data</td>
                </tr>
            }
        </tbody>
    </table>
</section>
