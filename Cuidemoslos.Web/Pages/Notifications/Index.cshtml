@page
@model Cuidemoslos.Web.Pages.Notifications.IndexModel
@{
    ViewData["Title"] = "Notificaciones";
}
<section class="container">
    <h2>Notificaciones</h2>
    <table class="table">
        <thead><tr><th>Fecha</th><th>Asunto</th><th>Paciente</th></tr></thead>
        <tbody>
            @foreach (var n in Model.Items)
            {
                <tr>
                    <td>@n.CreatedAt.ToString("g")</td>
                    <td>@n.Subject</td>
                    <td>@n.Patient</td>
                </tr>
            }
        </tbody>
    </table>
</section>
