@page
@model Cuidemoslos.Web.Pages.Auth.LoginModel
@attribute [Microsoft.AspNetCore.Authorization.AllowAnonymous]
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="login-container">
    <div class="login-card">
        <h2>Bienvenido a <span class="brand">Cuidémoslos</span></h2>
        <p class="subtitle">Ingresá tus credenciales para continuar</p>

        <form method="post" class="login-form">
            <div class="form-group">
                <label for="User">Usuario</label>
                <input asp-for="User" class="form-control" placeholder="ejemplo@correo.com" />
                <span asp-validation-for="User" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Password">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="********" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-login">Iniciar Sesión</button>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert">@Model.ErrorMessage</div>
            }
        </form>
    </div>
</div>
