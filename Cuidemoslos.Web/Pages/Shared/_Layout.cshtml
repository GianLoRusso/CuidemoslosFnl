@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Cuidémoslos";
}
<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>@title</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg">
    <header class="container">
        <nav class="flex items-center justify-between py-3">
            <a asp-page="/Index" class="text-xl font-semibold">Cuidemoslos</a>
            <ul class="flex gap-4">
                <li><a asp-page="/Patients/Index">Pacientes</a></li>
                <li><a asp-page="/Notifications/Index">Notificaciones</a></li>
                <li><a asp-page="/Logs/Index">Bitácora</a></li>
                <li><a asp-page="/Auth/Logout">Salir</a></li>
            </ul>
        </nav>
    </header>
    <main class="wrap">
        @RenderBody()
        <form method="post" asp-page="/Auth/Logout" style="display:inline">
            <button class="link" style="background:none;border:0;cursor:pointer">Salir</button>
        </form>

    </main>
</body>
</html>
