@page "{id:int}"
@model Cuidemoslos.Web.Pages.Patients.DetailsModel
@{
    ViewData["Title"] = "Detalle del paciente";
    var p = Model.Patient!;
}
<section class="container">
    <a asp-page="Index">← Volver</a>
    <h2>@p.FullName</h2>
    <p class="muted">@p.Email · Alta: @p.CreatedAt.ToString("yyyy-MM-dd")</p>

    <div class="grid grid-cols-2 gap-6">
        <div>
            <h3>Últimos estados</h3>
            <table class="table">
                <thead><tr><th>Fecha</th><th>Score</th><th>Notas</th></tr></thead>
                <tbody>
                    @foreach (var m in p.Mood)
                    {
                        <tr>
                            <td>@m.CreatedAt.ToString("g")</td>
                            <td><strong>@m.Score</strong></td>
                            <td>@m.Notes</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            <h3>Notificaciones enviadas</h3>
            <table class="table">
                <thead><tr><th>Fecha</th><th>Asunto</th></tr></thead>
                <tbody>
                    @foreach (var n in p.Notifications)
                    {
                        <tr>
                            <td>@n.CreatedAt.ToString("g")</td>
                            <td>@n.Subject</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
